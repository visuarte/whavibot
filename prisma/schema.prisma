generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id           String          @id @default(uuid()) @map("id") @db.Uuid
  key          String          @unique @map("key") @db.VarChar(255)
  nombre       String          @map("nombre") @db.VarChar(255)
  descripcion  String?         @map("descripcion")
  tipo         String          @map("tipo") @db.VarChar(50)
  precioPorM2  Decimal?          @map("precioPorM2") @db.Decimal(10, 2)
  unidad       String          @map("unidad") @db.VarChar(50)
  category     String?         @map("category") @db.VarChar(100)
  material     String?         @map("material") @db.VarChar(255)
  sizeOptions  Json?           @map("sizeOptions")
  createdAt    DateTime        @default(now()) @map("createdAt") @db.Timestamp(6)
  updatedAt    DateTime        @updatedAt @map("updatedAt") @db.Timestamp(6)
  cotizaciones Cotizacion[]   @relation("ProductCotizaciones")
  options      ProductOption[] @relation("ProductOptions")
  prices       ProductPrice[]  @relation("ProductPrices")

  @@map("product")
  @@index([category], map: "idx_product_category")
  @@index([key], map: "idx_product_key")
}

model ProductPrice {
  id         String  @id @default(uuid()) @map("id") @db.Uuid
  productId  String @map("productId") @db.Uuid
  cantidad   Int    @map("cantidad")
  precioBase Decimal  @map("precioBase") @db.Decimal(10, 2)
  product    Product @relation("ProductPrices", fields: [productId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@map("product_price")
  @@index([productId], map: "idx_product_price_productid")
}

model ProductOption {
  id        String  @id @default(uuid()) @map("id") @db.Uuid
  productId String @map("productId") @db.Uuid
  name      String @map("name") @db.VarChar(255)
  recargo   Decimal  @map("recargo") @db.Decimal(10, 2)
  product   Product @relation("ProductOptions", fields: [productId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@map("product_option")
}

model Cotizacion {
  id          String   @id @default(uuid()) @map("id") @db.Uuid
  productId   String   @map("productId") @db.Uuid
  cantidad    Int?     @map("cantidad")
  areaM2      Decimal?   @map("areaM2") @db.Decimal(10, 2)
  base        Decimal    @map("base") @db.Decimal(10, 2)
  iva         Decimal    @map("iva") @db.Decimal(10, 2)
  total       Decimal    @map("total") @db.Decimal(10, 2)
  leadScoring String   @map("leadScoring") @default("tibio") @db.VarChar(50)
  optionId    String?  @map("optionId") @db.VarChar(255)
  createdAt   DateTime @default(now()) @map("createdAt") @db.Timestamp(6)
  product     Product  @relation("ProductCotizaciones", fields: [productId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  lead        Lead?

  @@map("cotizacion")
  @@index([createdAt], map: "idx_cotizacion_createdat")
  @@index([productId], map: "idx_cotizacion_productid")
}

model Lead {
  id            String      @id @default(uuid()) @map("id") @db.Uuid
  cotizacionId  String?     @unique @map("cotizacionId") @db.Uuid
  archivoNombre String?     @map("archivoNombre") @db.VarChar(255)
  archivoPath   String?     @map("archivoPath") @db.VarChar(500)
  mensaje       String?     @map("mensaje")
  leadScoring   String      @map("leadScoring") @default("tibio") @db.VarChar(50)
  notificado    Boolean     @map("notificado") @default(false)
  notificadoAt  DateTime?   @map("notificadoAt") @db.Timestamp(6)
  createdAt     DateTime    @default(now()) @map("createdAt") @db.Timestamp(6)
  cotizacion    Cotizacion? @relation(fields: [cotizacionId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@map("lead")
  @@index([cotizacionId], map: "idx_lead_cotizacionid")
  @@index([createdAt], map: "idx_lead_createdat")
}


